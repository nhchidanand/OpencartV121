<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">

    <groups>
        <run>
            <!--<include name="Regression"/>-->
            <include name="Sanity"/>
            <!--<include name="Master"/>-->
            <!--<include name="DataProvider"/>-->
        </run>
    </groups>

    <listeners>
        <listener class-name="utilities.ExtentReportUtility"/>
    </listeners>

    <test name="ChromeBrowser">
        <parameter name="OS" value="Windows"/>
        <parameter name="Browser" value="Chrome"/>
        <classes>
            <class name="testCases.TC_001_AccountRegistrationTest"/>
            <class name="testCases.TC_002_LoginTest"/>
            <class name="testCases.TC_003_LoginDDT"/>
            <class name="testCases.TC_004_LogoutTest"/>
        </classes>
    </test>

    <test name="EdgeBrowser">
        <parameter name="OS" value="Windows"/>
        <parameter name="Browser" value="Edge"/>
        <classes>
            <class name="testCases.TC_005_SearchIphoneTest"/>
            <class name="testCases.TC_006_ValidateProductInWishlsit"/>
            <class name="testCases.TC_007_UpdateAddress"/>
            <class name="testCases.TC_008_UpdateAddress"/>
        </classes>
    </test>

    <test name="SafariBrowser">
        <parameter name="OS" value="Windows"/>
        <parameter name="Browser" value="Chrome"/>
        <classes>
            <class name="testCases.TC_009_EditAccount"/>
            <class name="testCases.TC_010_ChangePassword"/>
            <class name="testCases.TC_011_LoginDB"/>
            <class name="testCases.TC_012_NewsLetterSubscriptionYes"/>
        </classes>
    </test>

    <test name="FireFoxBrowser">
        <parameter name="OS" value="Windows"/>
        <parameter name="Browser" value="Edge"/>
        <classes>
            <class name="testCases.TC_013_NewsLetterSubscriptionNo"/>
            <class name="testCases.TC_014_SubmitContactFormP"/>
            <class name="testCases.TC_015_SubmitContactFormN"/>
            <class name="testCases.TC_016_ReturnProduct"/>
        </classes>
    </test>
</suite>